{
  "pluginAlias": "HomebridgeAlarmListener",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Listener Name",
        "type": "string",
        "default": "Smoke Alarm",
        "minLength": 1,
        "required": true
      },
      "frequency": {
        "title": "Alarm Frequency",
        "type": "integer",
        "required": true,
        "default": 3200
      },
      "tolerance": {
        "title": "Passband",
        "type": "integer",
        "required": true,
        "default": 100
      },
      "threshold": {
        "title": "Threshold",
        "type": "integer",
        "required": true,
        "default": 1
      },
      "inertia": {
        "title": "Activation Inertia",
        "type": "integer",
        "required": true,
        "default": 10
      },
      "mic_device": {
        "title": "Microphone Device",
        "type": "string",
        "required": true,
        "default": "plughw:2,0"
      }
    }
  }
}
